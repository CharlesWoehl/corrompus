             <% end %>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <%= link_to "Mes reservations", bookings_path, class: "dropdown-item padding-item item-bold" %>
              <% if current_user.owner? %>
              <%= link_to "++ Ajouter une personnalitÃ©", new_personnality_path, class: "dropdown-item padding-item" %>
              <% end %>
              <%= link_to "Editer mon profile", edit_user_registration_path, class: "dropdown-item padding-item border-bottom" %>
