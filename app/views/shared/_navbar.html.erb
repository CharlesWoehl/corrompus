            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <%= link_to "Inscription", new_user_registration_path, class: "dropdown-item padding-item item-bold border-bottom" %>
              <%= link_to "Connexion", new_user_session_path, class: "dropdown-item padding-item" %>
            </div>
          </li>
        <% end %>
      </ul>
